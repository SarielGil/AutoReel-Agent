# ============================================
# AutoReel Agent - Environment Variables
# ============================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# Google Gemini API Key (for highlight detection)
GEMINI_API_KEY=your_gemini_api_key_here

# Whisper Model Settings
WHISPER_MODEL=ivrit-ai/whisper-large-v3
WHISPER_DEVICE=cuda  # or "cpu" if no GPU

# Audio Processing
AUDIO_SPEED_FACTOR=2.0      # Speed up audio for faster transcription (1.0 = no speedup)
AUDIO_SAMPLE_RATE=16000      # Optimal for Whisper
AUDIO_CHANNELS=1             # Mono

# Output Settings
OUTPUT_DIR=./output
MAX_REEL_DURATION=90         # Max reel duration in seconds
MIN_REEL_DURATION=30         # Min reel duration in seconds
TARGET_RESOLUTION=1080x1920  # 9:16 vertical

# Platform Settings
TARGET_PLATFORMS=instagram,tiktok,youtube_shorts
